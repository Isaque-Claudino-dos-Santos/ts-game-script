{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "module": "ES6",
    "target": "ES6",
    "allowJs": true,
    "rootDirs": ["vendor/TsGame2D", "src"],
    "outDir": "dist",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "paths": {
      "@TsGame2D": ["./vendor/TsGame2D"]
    },
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },

  "ts-node": {
    "compilerOptions": {
      "allowSyntheticDefaultImports": true,
      "noImplicitAny": true,
      "module": "commonjs",
      "target": "ES6",
      "allowJs": true,
      "rootDirs": ["vendor/TsGameCommands"],
      "outDir": "dist",
      "moduleResolution": "Node",
      "esModuleInterop": true
    }
  },

  "files": ["src/index.ts", "vendor/TsGame2D/index.ts"],
  "exclude": ["node_modules", "./jest.config.ts", "src/**/*.test.ts"]
}
