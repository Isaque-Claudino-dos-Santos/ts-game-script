{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": true,
        "module": "ES6",
        "target": "ES6",
        "allowJs": true,
        "rootDirs": ["src"],
        "outDir": "build",
        "moduleResolution": "Node",
        "esModuleInterop": true,

        "emitDecoratorMetadata": true,
        "experimentalDecorators": true
    },

    "ts-node": {
        "compilerOptions": {
            "allowSyntheticDefaultImports": true,
            "noImplicitAny": true,
            "module": "commonjs",
            "target": "ES6",
            "allowJs": true,
            "rootDirs": ["vendor/TsGameCommands"],
            "outDir": "dist",
            "moduleResolution": "Node",
            "esModuleInterop": true
        }
    },

    "files": ["src/index.ts"],
    "exclude": ["node_modules", "./jest.config.ts", "src/**/*.test.ts"],
    "include": ["**/*.ts"]
}
