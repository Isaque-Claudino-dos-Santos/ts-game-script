{
    "compilerOptions": {
        "module": "ES2020",
        "target": "ES2020",
        "moduleResolution": "node",
        "allowJs": true,
        "esModuleInterop": true,
        "checkJs": true,
        "strict": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "rootDir": "src",
        "outDir": "dist",
        "paths": {
            "@Draw/*": [
                "./src/Draw/*"
            ],
            "@Display/*": [
                "./src/Display/*"
            ],
            "@Event/*": [
                "./src/Event/*"
            ]
        }
    },
    "files": [
        "src/index.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}