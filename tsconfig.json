{
    "compilerOptions": {
        "module": "ES2020",
        "target": "ES2020",
        "moduleResolution": "node",
        "allowJs": true,
        "esModuleInterop": true,
        "checkJs": true,
        "strict": true,
        "noImplicitAny": false,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "rootDir": "src",
        "outDir": "dist",

        "paths": {
            "@Engine/*": ["./src/Engine/*"],
            "@Type/*": ["./src/Engine/Types/*"],
            "@Interface/*": ["./src/Engine/Interfaces/*"],
            "@Asset/*": ["./assets/*"]
        }
    },
    "files": [
        "src/index.ts"
    ],
    "include": ["./src/**/*.ts", "Global.d.ts"],
    "exclude": [
        "node_modules"
    ]
}