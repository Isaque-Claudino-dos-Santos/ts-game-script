{
    "compilerOptions": {
        "module": "ES2020",
        "target": "ES2020",
        "moduleResolution": "node",
        "allowJs": true,
        "esModuleInterop": true,
        "checkJs": true,
        "strict": true,
        "noImplicitAny": false,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "rootDir": "src",
        "outDir": "dist",
        "paths": {
            "@Draw/*": [
                "./src/Draw/*"
            ],
            "@Display/*": [
                "./src/Display/*"
            ],
            "@Event/*": [
                "./src/Event/*"
            ],
            "@Physical/*": [
                "./src/Physical/*"
            ],
            "@Module/*": ["./src/Modules/*"],
            "@Engine/*": ["./src/Engine/*"],
            "Game": ["./src/Game/index.ts"],
            "@Game/*": ["./src/Game/*"],
            "@Interface/*":["./src/Interfaces/*"],
            "@Enum/*": ["./src/Enums/*"],
            "@Type/*": ["./src/Types/*"]
        }
    },
    "files": [
        "src/index.ts"
    ],
    "include": ["./src/**/*.ts"],
    "exclude": [
        "node_modules"
    ]
}