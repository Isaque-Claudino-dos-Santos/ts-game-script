{
  "compilerOptions": {
    "module": "ES2020",
    "target": "ES2020",
    "moduleResolution": "node",
    "allowJs": true,
    "esModuleInterop": true,
    "checkJs": true,
    "strict": true,
    "noImplicitAny": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "rootDirs": ["./vendor", "./src"],
    "paths": {
      "@Vendor/*": ["./vendor/*"]
    }
  },
  "files": ["src/index.ts"],
  "include": ["./vendor/**/*.ts", "./src/**/*.ts", "Global.d.ts"],
  "exclude": ["node_modules"]
}
